<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
        <!-- Logo and Title -->
        <div class="mb-10">
            <h1 class="text-4xl font-bold text-center mt-8 mb-10">Tambah Akun</h1>
        </div>

        <!-- Form Card -->
        <div class="max-w-xl mx-auto">
            <div class="bg-white border border-solid border-black border-opacity-20 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
                <div class="p-4 sm:p-7">
                    <form>
                        <!-- Account Number Input -->
                        <div class="mb-6">
                            <label for="noAkun" class="block text-sm font-medium mb-2 dark:text-white">No Akun</label>
                            <input type="text" id="noAkun" name="noAkun" 
                                class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm rounded-lg text-sm border focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
                                placeholder="Masukkan nomor akun">
                        </div>

                        <!-- Button Group -->
                        <div class="grid grid-cols-2 gap-4">
                            <!-- Cancel Button -->
                            <a 
                            onclick="window.history.back()"
                            class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-lg border border-gray-200 font-medium text-gray-800 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-blue-600 transition-all dark:border-gray-700 dark:text-gray-300 dark:hover:bg-slate-800 dark:hover:text-white dark:focus:ring-offset-gray-800" href="#">
                                Batal
                            </a>

                            <!-- Save Button -->
                            <a class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-lg border border-transparent font-medium bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 transition-all dark:focus:ring-offset-gray-800" href="#">
                                Simpan
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Preline JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/preline/2.0.3/preline.min.js"></script>

    <script>
        // Handle form submission
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();
            // Add your form submission logic here
        });

        // Handle cancel button
        document.querySelector('button[type="button"]').addEventListener('click', function() {
            // Add your cancel logic here
            // For example: window.history.back() or redirect to previous page
        });
    </script>