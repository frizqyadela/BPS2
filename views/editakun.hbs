<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <!-- Logo and Title -->
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-bold">Edit Akun</h1>
    </div>

    <!-- Form Card -->
    <div class="max-w-xl mx-auto">
        <div class="bg-white border border-black border-opacity-20 rounded-xl shadow-sm p-6 dark:bg-gray-800 dark:border-gray-700">
            <form id="editForm">
                <!-- No Bukti -->
                <div class="mb-4">
                    <label for="nama_akun" class="block text-sm font-medium mb-2 dark:text-white">Nama Akun</label>
                    <input type="text" id="nama_akun" name="nama_akun" value="{{akunId}}"
                        class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:ring-blue-500 dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400">
                </div>

                <!-- Button Group -->
                <div class="grid grid-cols-2 gap-4 mt-6">
                    <button type="button" onclick="window.history.back()"
                        class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-lg border border-gray-200 font-medium text-gray-800 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-blue-600 transition-all dark:border-gray-700 dark:text-gray-300 dark:hover:bg-slate-800 dark:hover:text-white dark:focus:ring-offset-gray-800">
                        Batal
                    </button>
                    <button type="submit"
                        class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-lg border border-transparent font-medium bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 transition-all dark:focus:ring-offset-gray-800">
                        Simpan
                    </button>
                </div>





                
            </form>
        </div>
    </div>
</div>

<!-- Pop-Up Modal -->
<div id="popupModal" class="hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-lg p-6 max-w-sm w-full text-center flex flex-col items-center gap-4">
        <!-- Gambar -->
        <img 
            loading="lazy"
            src="https://cdn.builder.io/api/v1/image/assets/TEMP/7bc622660ad872f51889a3d59aa6529e02f11ba04b4d58676ffc1a35e22d6719?placeholderIfAbsent=true&apiKey=b968644d66b542249f51acc2390675a8"
            class="object-contain max-w-[120px] aspect-square"
            alt="Success icon"
        >
        
        <!-- Pesan -->
        <p class="text-lg font-semibold text-gray-800">
            Data berhasil disimpan!
        </p>
        
        <!-- Tombol -->
        <button id="closePopup" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg shadow-md">
            Tutup
        </button>
    </div>
</div>

<script>
    const popupModal = document.getElementById("popupModal");
    const closePopup = document.getElementById("closePopup");

    document.getElementById("editForm").addEventListener("submit", function (event) {
        event.preventDefault();
        popupModal.classList.remove("hidden");
    });

    closePopup.addEventListener("click", function () {
        popupModal.classList.add("hidden");
        // Redirect ke halaman beranda
        window.location.href = 'beranda';  // Ganti dengan URL yang sesuai
    });
</script>