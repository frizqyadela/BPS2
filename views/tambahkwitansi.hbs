<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="mb-10">
        <h1 class="text-4xl font-bold text-center mt-8 mb-10">Tambah Kwitansi</h1>
    </div>
    <div class="max-w-xl mx-auto">
        <div class="bg-white border border-solid border-black border-opacity-20 rounded-xl shadow-sm">
            <div class="p-6 sm:p-8">
                <form id="kwitansiForm">
                    <div class="mb-4">
                        <label for="noBukti" class="block text-sm font-medium mb-2">No Bukti</label>
                        <input type="text" id="noBukti" name="noBukti" 
                            class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Masukkan nomor bukti">
                    </div>
                    <div class="mb-4">
                        <label for="judul" class="block text-sm font-medium mb-2">Untuk Pembayaran</label>
                        <input type="text" id="judul" name="judul" 
                            class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Masukkan judul kwitansi">
                    </div>
                    <div class="mb-4">
                        <label for="tanggalMulai" class="block text-sm font-medium mb-2">Tanggal</label>
                        <input type="date" id="tanggalMulai" name="tanggalMulai" 
                            class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500" required>
                    </div>
                    <div class="mb-4">
                        <label for="jumlahUang" class="block text-sm font-medium mb-2">Jumlah Uang</label>
                        <input type="text" id="jumlahUang" name="jumlahUang" 
                            class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Masukkan jumlah uang">
                    </div>
                    <div class="mb-6">
                        <label for="Dokumen" class="block text-sm font-medium mb-2">Dokumen</label>
                        <input type="file" id="af-submit-pdf" name="signed_file" 
                            class="block w-full border border-gray-200 rounded-lg text-sm file:py-2 file:px-4">
                    </div>
                    <div class="grid grid-cols-2 gap-4 mt-6">
                        <a onclick="window.history.back()" class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-lg border border-gray-200 font-medium text-gray-800 hover:bg-gray-50">Batal</a>
                        <button type="submit" class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-lg border border-transparent font-medium bg-blue-600 text-white hover:bg-blue-700">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Pop-Up Modal -->
<div id="popupModal" class="hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-lg p-6 max-w-sm w-full text-center flex flex-col items-center gap-4">
        <img loading="lazy" src="https://cdn.builder.io/api/v1/image/assets/TEMP/7bc622660ad872f51889a3d59aa6529e02f11ba04b4d58676ffc1a35e22d6719" class="object-contain max-w-[120px] aspect-square" alt="Success icon">
        <p class="text-lg font-semibold text-gray-800">Data berhasil disimpan!</p>
        <button id="closePopup" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg shadow-md">Tutup</button>
    </div>
</div>

<script>
    const popupModal = document.getElementById("popupModal");
    const closePopup = document.getElementById("closePopup");
    
    document.getElementById("kwitansiForm").addEventListener("submit", function (event) {
        event.preventDefault();
        popupModal.classList.remove("hidden");
    });
    
    closePopup.addEventListener("click", function () {
        popupModal.classList.add("hidden");
        window.location.href = 'daftar';
    });
</script>
