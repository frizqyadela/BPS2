<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <!-- Logo and Title -->
    <div class="mb-10">
        <h1 class="text-4xl font-bold text-center mt-8 mb-10">Tambah Kwitansi</h1>
    </div>

    <!-- Form Card -->
    <div class="max-w-xl mx-auto">
        <div class="bg-white border border-solid border-black border-opacity-20 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 sm:p-8">
                <form>
                    <!-- Input -->
                    <div class="mb-4">
                        <label for="noAkun" class="block text-sm font-medium mb-2 dark:text-white">No Bukti</label>
                        <input type="text" id="noBukti" name="noBukti" 
                            class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
                            placeholder="Masukkan nomor bukti">
                    </div>

                    <div class="mb-4">
                        <label for="judul" class="block text-sm font-medium mb-2 dark:text-white">Untuk Pembayaran</label>
                        <input type="text" id="judul" name="judul" 
                            class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
                            placeholder="Masukkan judul kwitansi">
                    </div>

                    <div class="mb-4">
                        <label for="tanggalMulai" class="block text-sm font-medium mb-2">Tanggal</label>
                        <input
                        type="date"
                        id="tanggalMulai"
                        name="tanggalMulai"
                        class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 placeholder-gray-400"
                        placeholder="dd/mm/yyyy"
                        required
                        >
                    </div>

                    <div class="mb-4">
                        <label for="jumlahUang" class="block text-sm font-medium mb-2 dark:text-white">Jumlah Uang</label>
                        <input type="text" id="jumlahUang" name="jumlahUang" 
                            class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
                            placeholder="Masukkan jumlah uang">
                    </div>

                    <div class="mb-6">
                        <label for="Dokumen" class="block text-sm font-medium mb-2">Dokumen</label>
                        <div class="sm:col-span-9">
                            <label for="af-submit-pdf" class="sr-only">Choose file</label>
                            <input
                                type="file"
                                name="signed_file"
                                id="af-submit-pdf"
                                class="block w-full border border-gray-200 rounded-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 file:bg-gray-50 file:border-0 file:bg-gray-100 file:me-4 file:py-2 file:px-4 dark:file:bg-neutral-700 dark:file:text-neutral-400"
                            />
                        </div>
                    </div>

                    <!-- Button Group -->
                    <div class="grid grid-cols-2 gap-4 mt-6">
                        <!-- Cancel Button -->
                        <a 
                        onclick="window.history.back()"
                        class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-lg border border-gray-200 font-medium text-gray-800 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-blue-600 transition-all dark:border-gray-700 dark:text-gray-300 dark:hover:bg-slate-800 dark:hover:text-white dark:focus:ring-offset-gray-800" href="#">
                            Batal
                        </a>

                        <!-- Save Button -->
                        <a class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-lg border border-transparent font-medium bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 transition-all dark:focus:ring-offset-gray-800" href="#">
                            Simpan
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Preline JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/preline/2.0.3/preline.min.js"></script>

